<div class="row">
  <div class="col-md-4">
    <fieldset>
      <%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: {class: "well"}) do |f| %>
        <%= devise_error_messages! %>
        <legend>Sign Up</legend>
        <%= f.input :first_name %>
        <%= f.input :last_name %>
        <%= f.input :profile_name %>
        <%= f.input :email %>
        <%= f.input :password %>
        <%= f.input :password_confirmation %>
        <div><%= f.button :submit, "Sign up" %></div>
      <% end %>
    </fieldset>
  </div>
  <div class="col-md-6">
    <h2>Signing up sucks!</h2>
  </div>
</div>
<p class="col-md-4">Already have an account?<span><%= render "devise/shared/links" %></span></p>